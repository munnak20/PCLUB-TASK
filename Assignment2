#include <bits/stdc++.h>
using namespace std;
int main(){
  int t,n,z,count;
  cin>>t;
  while(t--){
      count =0;
    cin>>n;
    vector<int>v;
    for(int i=0;i<n;i++){
        cin>>z;
        v.push_back(z);
    }
    for (int i=0;i<n;i++){ 
        if ((i==0&&v[i]!=0)||(v[i]!=0&&v[i-1]==0)){
            count++;
        }
    }
    if(count>2) cout<<2<<endl;
     else cout<<count<<endl;
   
  }
  }
